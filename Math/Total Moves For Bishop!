public class Solution {
    public int solve(int A, int B) {
       int ans=0;
       
       int r=A+1,c=B+1;
       
       while(r<=8 && c<=8){
           ans++;
           r++;
           c++;
       }
       
         r=A+1;c=B-1;
       
       while(r<=8 && c>=1){
           ans++;
           r++;
           c--;
       }
       
         r=A-1;c=B-1;
       
       while(r>=1 && c>=1){
           ans++;
           r--;
           c--;
       }
       
         r=A-1;c=B+1;
       
       while(r>=1 && c<=8){
           ans++;
           r--;
           c++;
       }
       
       return ans;
       
       
        
       
        
    }
}
